<!--エラーメッセージ-->
 <%= render "devise/shared/error_messages", resource: resource %>

<div class="container">

  <div class="signup">

    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


      <div class="name_field">
        <%= f.label "メンバーネーム" %><br>
        <%= f.text_field :name, size: "30" %>
      </div>

      <div class="email_field">
        <%= f.label "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
      </div>

      <div class="password_field">
        <%= f.label "パスワード" %>
        <% if @minimum_password_length %>
          <span>(<%= @minimum_password_length %> 文字以上)</span>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", size: "30" %>
      </div>

      <div class="password_cf_field">
        <%= f.label "パスワード(確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "30" %>
      </div>

      <div class="signup_button">
        <%= f.submit "新規登録", class: :button %>
      </div>
    <% end %>

    <div class="login_link">
      <p>
        ログインは
        <%= link_to "こちら", new_member_session_path %>
        から
      </p>
    </div>

  </div>

</div>

 <%#= render "devise/shared/links" %>
