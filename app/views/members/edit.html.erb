<h1>Members#edit</h1>

<%= form_with model: @member, url: member_path(@member.id), method: :patch do |f| %>

  <h4>メンバーネーム</h4>
  <%= f.text_field :name %>

  <h4>自己紹介</h4>
  <%= f.text_area :introduction %>

  <h4>プロフィール画像</h4>
  <%= f.file_field :profile_image, accept: "image/*" %>

  <%= f.submit '保存' %>

<% end %>
