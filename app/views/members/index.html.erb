<div class="container">
  <div class="member_index">

    <div class="title">
      <h2>メンバー一覧</h2>
    </div>

    <% @members.each do |member| %>
      <div class="member_list">
        <!--管理者権限-->
        <% if current_member.admin  %>
          <div class="row">
            <%= link_to member_path(member.id) do %>
              <div class="left">
                <p><%= image_tag member.get_profile_image, :size => "150x150" %></p>
              </div>
            <% end %>
            <div class="right">
              <div class="right_row">
                <div class="name">
                  <p><%= member.name %></p>
                </div>
                <div class="button_row">
                  <!--ボタン分岐/管理者-->
                  <% if current_member.admin %>
                    <!--管理者以外の一覧へのボタン表示-->
                    <% unless member.admin  == true %>
                      <!--論理削除ボタン-->
                      <div class="out_button">
                        <% if member.is_member == false %>
                          <p><%= button_to "管理者退会", out_member_path(member), method: :patch, class:"button" %></p>
                        <% else %>
                          <p><%= button_to "有効にする", out_member_path(member), method: :patch, class:"button" %></p>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                  <!--フォローボタン-->
                  <% unless member.id == current_member.id %>
                    <%= render "relationships/follow_button", member: member %>
                  <% end %>
                </div>
              </div>
              <div class="introduction">
                <p><%= member.introduction %></p>
              </div>
            </div>
          </div>
        <!--一般会員への表示-->
        <% else %>
          <!--退会メンバーの非表示-->
          <% unless member.is_member == true %>
          　<div class="row">
          　   <%= link_to member_path(member.id) do %>
                <div class="left">
                  <p><%= image_tag member.get_profile_image, :size => "150x150" %></p>
             　  </div>
              <% end %>
            　<div class="right">
                <div class="right_row">
                  <div class="name">
                    <p><%= member.name %></p>
                  </div>
                  <div class="button_row">
                    <!--フォローボタン-->
                    <% unless member.id == current_member.id %>
                      <%= render "relationships/follow_button", member: member %>
                    <% end %>
                   </div>
                 </div>
                 <div class="introduction">
                   <p><%= member.introduction %></p>
                 </div>
               </div>
          　 </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!--ページネーション-->
    <div class="paginate">
      <%= paginate @members %>
    </div>

  </div>
</div>
