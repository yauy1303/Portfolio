<div class="container">

  <div class="member_index">
    <% @members.each do |member| %>
    <div class="member_list">
      <% if current_member.admin  %>
        <div class="row">
          <div class="left">
            <p><%= image_tag member.get_profile_image, :size => "100x100" %></p>
          </div>
          <div class="right">
            <div class="right_row">
              <div class="name">
                <p><%= member.name %></p>
              </div>
              <div class="button_row">
                 <div class="out_button">
                  <% unless current_member.admin %>
                    <% if member.is_member == false %>
                      <p><%= button_to "管理者退会", out_member_path(member), method: :patch, class:"button" %></p>
                    <% else %>
                       <p><%= button_to "有効にする", out_member_path(member), method: :patch, class:"button" %></p>
                    <% end %>
                  <% end %>
                </div>
                 <!--フォローボタン-->
                 <% unless member.id == current_member.id %>
                   <%= render "relationships/follow_button", member: member %>
                 <% end %>
              </div>
            </div>
            <div class="introduction">
              <p><%= member.introduction %></p>
            </div>
          </div>
        </div>

      <% else %>
        <% unless member.is_member == true %>
        　<div class="row">
        　  <div class="right_row">

        　  </div>
          </div>
          <p><%= image_tag member.get_profile_image, :size => "100x100" %></p>
          <p><%= member.name %></p>
          <p><%= member.introduction %></p>
          <% unless member.id == current_member.id %>
          　<!--フォローボタン-->
          　<%= render "relationships/follow_button", member: member %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
  </div>

</div>
