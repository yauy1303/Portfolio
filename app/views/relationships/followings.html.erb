<div class="container">
  <div class="followings_index">
    <% if @member.count.zero? %>
      <div class="nil_title">
        <h2>フォローしていません</h2>
      </div>
    <% else %>
      <div class="title">
        <h2>
          <%= link_to member_path(@view_name) do %>
            <%= @view_name.name %>
          <% end %>
          さんのフォロー
        </h2>
      </div>
    <% end %>

    <% @member.each do |member| %>
      <div class="member_list">
        <% if current_member.admin  %>
          <div class="row">
            <%= link_to member_path(member.id) do %>
              <div class="left">
                <p><%= image_tag member.get_profile_image, :size => "150x150" %></p>
              </div>
            <% end %>
            <div class="right">
              <div class="right_row">
                <div class="name">
                  <p><%= member.name %></p>
                </div>
                <div class="button_row">
                  <% if current_member.admin %>
                    <% unless member.admin  == true %>
                      <div class="out_button">
                        <% if member.is_member == false %>
                          <p><%= button_to "管理者退会", out_member_path(member), method: :patch, class:"button" %></p>
                        <% else %>
                          <p><%= button_to "有効にする", out_member_path(member), method: :patch, class:"button" %></p>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                   <!--フォローボタン-->
                   <% unless member.id == current_member.id %>
                     <%= render "relationships/follow_button", member: member %>
                   <% end %>
                </div>
              </div>
              <div class="introduction">
                <p><%= member.introduction %></p>
              </div>
            </div>
          </div>
        <% else %>
          <% unless member.is_member == true %>
          　<div class="row">
              <div class="left">
                <%= link_to member_path(member.id) do %>
                  <p><%= image_tag member.get_profile_image, :size => "150x150" %></p>
                <% end %>
           　  </div>
            　<div class="right">
                <div class="right_row">
                  <div class="name">
                    <p><%= member.name %></p>
                  </div>
                  <div class="button_row">
                   <!--フォローボタン-->
                   <% unless member.id == current_member.id %>
                     <%= render "relationships/follow_button", member: member %>
                   <% end %>
                  </div>
                 </div>
                 <div class="introduction">
                   <p><%= member.introduction %></p>
                 </div>
               </div>
          　 </div>
          <% end %>
        <% end %>
      </div>
    <% end %>

  </div>
</div>
