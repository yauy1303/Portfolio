<div class="conteiner">

    <div class="article_edit_heading">
      <h1>記事の編集</h1>
    </div>

    <div class="article_edit_form">
    <%= form_with model: @article, url: article_path(@article.id), method: :patch do |f| %>
      <div class="title">
        <h4>タイトル</h4>
        <%= f.text_field :title %>
      </div>
      <div class="eyecatch">
         <h4>アイキャッチ画像</h4>
         <%= f.file_field :article_image, accept: "image/*" %>
      </div>
      <div class="tag">
          <h4>タグ</h4>
          <%= f.label "タグ (,で区切ると複数タグ登録できます)" %>
          <%= f.text_field :tag_name, value: @tag_list %>
      </div>
      <div class="text">
         <h4>本文</h4>
         <%= f.text_area :text %>
      </div>

      <%= f.submit '変更を保存' %>

    <% end %>
    </div>

</div>